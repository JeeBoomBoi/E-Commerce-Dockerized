<%- include ("../includes/adminHeader.ejs") %>  
<h2 class="page-title mt-3">Edit a page</h2>
<a href="/admin/pages" class="btn btn-primary mb-3">Back to all pages</a>
<% if(typeof alert != 'undefined') { %>
    <% alert.forEach(function(error) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error.msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
          </div>
    <% }) %>
<% } %>

 <form method="POST" action="/admin/pages/edit-pages/<%= title %>">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" placeholder="Title" value="<%= title %>">
    </div>

    <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
    </div>

    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-dark">Submit</button>
</form>
<%- include ("../includes/adminFooter.ejs") %>
