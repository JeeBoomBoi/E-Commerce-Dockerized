<%- include ("../includes/adminHeader.ejs") %>  
<h2 class="page-title mt-3">Products</h2>
<a href="/admin/products/add-product" class="btn btn-primary mb-3">Add a new product</a>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach((product) => { %>
        <tr>
            <td><%= product.title %></td>
            <td>&#8377;<%= parseFloat(product.price).toFixed(2) %></td>
            <td><%= product.category %></td>
            <td>
                <% if (product.image === '') { %>
                <img id= "noimage" src="/images/noimage.png" alt=""> 
                <% } else { %>
                <img id="noimage" src="/images/product_imgs/<%= product._id %>/<%= product.image %>" alt="" />
                <% } %>

            </td>
            <td><a href="/admin/products/edit-product/<%= product._id %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product.id %>">Delete</a></td>
        </tr>
        <% }) %>
    </tbody>
</table>

<%- include ("../includes/adminFooter.ejs") %>
 